{
  "$schema": "../../../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "native",
  "version": "0.1.0",
  "identifier": "io.devdept.app",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "cd apps/native && lsof -i :3000 || npx next dev",
    "beforeBuildCommand": "nx build native"
  },
  "app": {
    "windows": [
      {
        "title": "native",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
